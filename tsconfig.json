{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"incremental": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"~src/*": [
				"./src/*"
			],
			"~assets/*": [
				"./src/assets/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"test/**/*.test.ts"
	]
}